<div class='d-flex align-items-center h-100'>
  <%= form_with model: User.new, url: sessions_path, class: 'w-galaxy mw-100 m-auto p-3 d-grid gap-3', data: { controller: 'new-session' } do |f| %>
    <h1 class='h3 text-center'>Realtime Chat</h1>
    <%= f.text_field :name, class: 'form-control form-control-lg', placeholder: 'Enter your name', required: true, autofocus: true, autocomplete: 'off' %>
    <%= f.submit 'Join chat', class: 'btn btn-primary btn-lg w-100' %>
  <% end %>
</div>
